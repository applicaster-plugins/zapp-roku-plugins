<?xml version='1.0' encoding='utf-8'?>
<component
    name='QuickBrickEpgScreen'
    extends='UIBScreen'
    vm='QuickBrickEpgScreenVM'>

  <interface>
    <field
        id='screenState'
        type='node' />
  </interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=zapp_viewUtils_UIBColor("screen_background_color")}}' />
    <mv_Poster
        id='backgroundPoster'
        style='{{=zapp_viewUtils_UIBBackgroundPoster("screen_background_color")}}' />
    <mv_Poster
        id='logoPoster'
        style='{{=zapp_viewUtils_UIBPoster("logo")}}' />

    <TimeGrid
        id='TimeGrid'
        content='{{content}}'
        contentStartTime='{{contentStartTime}}'
        channelFocused='{(onChannelFocused(value))}'
        programSelected='{(onProgramSelected(value))}'
        channelInfoComponentName='channelItemComponent' />
    <LayoutGroup
        id='layoutGroup'
        layoutDirection='vert'
        horizAlignment='center'
        vertAlignment='center'
        translation='{{:menuPosition}}'>
      <Menu
          id='menu'
          buttons='{{menubuttons}}'
          style='{{:menuStyle}}'
          selectedIndex='{(onSelectedIndexChange(value))}'
          jumpToIndex='{{jumpToIndex}}'
          buttonSize='{{:buttonSize}}'
          buttonSpacing='{{:buttonSpacing}}' />
    </LayoutGroup>

    <Rectangle
        id='backgroundRectangle'
        width='600'
        height='1080'
        color='{{=zapp_viewUtils_UIBColor("background_color")}}'>
      <mv_MarkupList
          id='list'
          style='{{listStyle}}'
          content='{{listContent}}'
          itemComponentName='ZPowerCell'
          numColumns='1'
          numRows='6'
          itemSelected='{(onSelectItem(value))}' />
    </Rectangle>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{isLoading}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>