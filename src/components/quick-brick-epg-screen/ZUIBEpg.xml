<?xml version='1.0' encoding='utf-8'?>
<component
    name='ZUIBEpg'
    extends='UIBScreen'
    vm='QuickBrickEpgScreenVM'>

  <interface>
    <field
        id='screenState'
        type='node' />
  </interface>

  <children>
    <Rectangle
        id='backgroundRectangle'
        width='1920'
        height='1080'
        color='{{=zapp_viewUtils_UIBColor("screen_background_color")}}' />
    <mv_Poster
        id='backgroundPoster'
        style='{{=zapp_viewUtils_UIBBackgroundPoster("screen_background_color")}}' />
    <mv_Poster
        id='logoPoster'
        style='{{=zapp_viewUtils_UIBPoster("logo")}}' />

    <TimeGrid
        id='TimeGrid'
        content='{{content}}'
        contentStartTime='{{contentStartTime}}'
        leftEdgeTargetTime='{{leftEdgeTargetTime}}'
        channelFocused='{(onChannelFocused(value))}'
        programSelected='{(onProgramSelected(value))}'
        vertFocusAnimationStyle='floatingFocus'
        translation='[0, 500]'
        channelInfoComponentName='channelItemComponent' />

    <mv_LayoutGroup
        id='controlsGroup'
        _type='mv_ControlsGroup'
        translation='[200, 150]'
        layoutDirection='horiz'
        keyDirection='horiz'
        itemSpacings='[10]'
        _initializeAfterCreatingChildren='true'
        visible='true'>
      <ZActionButton
          id='button1'
          style='{{:dayButtonStyle}}'
          selected='{(onDayButtonSelected())}'
          visible='{{dayButtonVisible}}'
          _type='mv_Button'
          text='Days' />
      <ZActionButton
          id='button2'
          style='{{:filterButtonStyle}}'
          selected='{(onFilterButtonSelected())}'
          visible='{{filterButtonVisible}}'
          _type='mv_Button'
          text='Filter' />
    </mv_LayoutGroup>

    <Rectangle
        id='backgroundDayRectangle'
        width='600'
        height='1080'
        translation='[0, 0]'
        color='{{=zapp_viewUtils_UIBColor("days_tabs_background_color")}}'
        visible='{{itemListVisible}}'>
      <Poster
          id='filterGradient'
          width='{{=zapp_viewUtils_UIBInt("gradient_w", 1920)}}'
          height='{{=zapp_viewUtils_UIBInt("gradient_h", 1080)}}'
          uri='{{=zapp_viewUtils_UIBAssetUri("gradient_url", "pkg:/images/$$RES$$/tab-bar-gradient.9.png")}}'
          translation='[0,0]' />
      <mv_Label
          id='filterLabel'
          width='290'
          height='32'
          horizAlign='center'
          vertAlign='center'
          maxLines='2'
          text='{{filterLabelText}}'
          wrap='true'
          fontKey='medium,20'
          translation='[0,250]' />
      <mv_MarkupList
          id='list'
          style='{{listStyle}}'
          content='{{listContent}}'
          jumpToItem='{{jumpToItem}}'
          itemComponentName='ZPowerCell'
          translation='[0, 300]'
          numColumns='1'
          numRows='6'
          itemSelected='{(onSelectItem(value))}' />
    </Rectangle>

    <LoadingIndicator
        id='loadingIndicator'
        width='100'
        height='100'
        translation='[1000,500]'
        isActive='{{isLoading}}'
        backgroundVisible='false'
        text='' />

  </children>
</component>