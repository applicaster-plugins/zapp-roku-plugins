<?xml version='1.0' encoding='utf-8'?>
<component
    name='ZFullScreenSearch'
    extends='UIBComponent'
    vm='FullScreenSearchVM'>

  <interface>
  </interface>

  <children>
    <mv_MLabel
        id='noSearchLabel'
        visible='{{isNoSearchLabelVisible}}'
        style='{{=zapp_viewUtils_UIBLabel("no_items")}}' />
    <mv_MLabel
        id='notFoundLabel'
        visible='{{isNotFoundLabelVisible}}'
        style='{{=zapp_viewUtils_UIBLabel("not_found")}}' />

    <ZActionButton
        id='textInput'
        style='{{:inputStyle}}'
        labelXOffset='9'
        text='{{searchText}}' />

    <mv_MMiniKeyboard
        id='keyboard'
        style='{{:keyboardStyle}}'
        newText='{{searchText}}'
        text='{(onSearchTextChange(value))}' />

    <mv_MMarkupGrid
        id='grid'
        content='{{results}}'
        visible='{{isGridVisible}}'
        style='{{gridStyle}}'
        jumpToItem='{{jumpToItem}}'
        itemSelected='{(onSelectItem(value))}'
        numColumns='{{=zapp_viewUtils_UIBInt("number_of_columns", 2)}}'
        numRows='{{=zapp_viewUtils_UIBInt("number_of_rows", 3)}}'
        itemComponentName='ZPowerCell' />

    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='{{isLoading;fireOnSet}}'
        backgroundVisible='false'
        translation='[0,0]'
        text='' />

  </children>
</component>